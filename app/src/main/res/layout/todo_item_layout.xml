<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="todo"
            type="ru.perelyginva.todolist_v01.model.Todo" />

        <variable
            name="listener"
            type="ru.perelyginva.todolist_v01.view.TodoCheckChangeListener" />

        <variable
            name="editListener"
            type="ru.perelyginva.todolist_v01.view.TodoEditClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="@{todo.title}"
            android:onCheckedChanged="@{(cb, isChecked) -> listener.onTodoCheckChange(cb, isChecked, todo)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </CheckBox>

        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"
            android:tag="@{todo.uuid}"
            android:onClick="@{editListener::onTodoEditClick}"
            app:layout_constraintBottom_toBottomOf="@id/checkTask"
            app:layout_constraintEnd_toEndOf="@id/checkTask"
            app:layout_constraintTop_toTopOf="@id/checkTask">

        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>